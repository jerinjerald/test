<odoo>
	<data>
		<record id="sale_order_view_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.view.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//page[@name='order_lines']//tree//field[@name='product_id']"
					position='before'>
					<field name="number" />
				</xpath>
			</field>
		</record>
		<record id="purchase_order_view_form_inherit"
			model="ir.ui.view">
			<field name="name">purchase.order.view.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//page[1]//field[@name='order_line']//tree//field[@name='product_id']"
					position='before'>
					<field name="number" />
				</xpath>
			</field>
		</record>

		<record id="account_invoice_view_form_inherit"
			model="ir.ui.view">
			<field name="name">account.invoice.view.form</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//page[1]//field[@name='invoice_line_ids']//tree//field[@name='product_id']"
					position='before'>
					<field name="number" />
				</xpath>

			</field>
		</record>
		<record id="stock_picking_view_form_inherit" model="ir.ui.view">
			<field name="name">stock.picking.view.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
            
			<field name="arch" type="xml">
            
            <!--<xpath expr="//field[@name='product_id']" position="after">
				<xpath
					expr="//page[@name='detailed_operations_shown']//field[@name='move_line_ids_without_package']//tree//field[@name='product_id']"
					position='before'>
					<field name="number" />
				</xpath>-->
                
                <!--<xpath expr="//field[@name='product_id']" position="before">-->
				<xpath
					expr="//page[@name='operations']/field[@name='move_ids_without_package']//tree//field[@name='product_id']"
					position='before'>
					<field name="number" />
				</xpath>
			</field>
		</record>

		



	</data>
</odoo>